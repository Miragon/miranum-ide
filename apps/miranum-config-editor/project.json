{
  "name": "miranum-config-editor",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/miranum-config-editor/src",
  "projectType": "application",
  "implicitDependencies": [
    "!miranum-config-editor-webview"
  ],
  "targets": {
    "observe-all": {
      "executor": "nx:run-commands",
      "parallel": true,
      "options": {
        "commands": [
          {
            "command": "npx nx observe miranum-config-editor",
            "prefix": "miranum-modeler",
            "color": "blue"
          },
          {
            "command": "npx nx observe miranum-config-editor-webview",
            "prefix": "miranum-modeler-bpmn-webview",
            "color": "green"
          }
        ]
      }
    },
    "observe": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "development",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/miranum-config-editor",
        "format": [
          "cjs"
        ],
        "watch": true,
        "bundle": false,
        "main": "apps/miranum-config-editor/src/main.ts",
        "tsConfig": "apps/miranum-config-editor/tsconfig.app.json",
        "assets": [
          "apps/miranum-config-editor/src/assets"
        ],
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "esbuildOptions": {
            "sourcemap": true,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/miranum-config-editor",
        "format": [
          "cjs"
        ],
        "bundle": true,
        "main": "apps/miranum-config-editor/src/main.ts",
        "tsConfig": "apps/miranum-config-editor/tsconfig.app.json",
        "assets": [
          "apps/miranum-config-editor/src/assets"
        ],
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/miranum-config-editor/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/miranum-config-editor/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
