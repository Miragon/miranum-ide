{
  "name": "miranum-console",
	"displayName": "Miranum: Console",
	"description": "",
	"version": "0.1.1",
  "license": "Apache-2.0",
  "publisher": "miragon-gmbh",
  "repository": {
    "type": "git",
    "url": "https://github.com/FlowSquad/miranum-ide.git"
  },
  "bugs": {
    "url": "https://github.com/FlowSquad/miranum-ide/issues"
  },
  "engines": {
		"vscode": "^1.73.0"
	},
  "icon": "assets/kometLogo.png",
	"categories": [
		"Other"
	],
	"extensionPack": [
	  "publisher.extensionName"
	],
	"activationEvents": [
        "onCommand:miranum.deploy.local",
        "onCommand:miranum.deploy.dev",
        "onCommand:miranum.deploy.test",
        "onCommand:miranum.deployAll.local",
        "onCommand:miranum.deployAll.dev",
        "onCommand:miranum.deployAll.test",
        "onCommand:miranum.generateFile",
        "onCommand:miranum.generateProject"
	],
	"main": "main.js",
	"contributes": {
		"commands": [
			{
				"command": "miranum.deploy.local",
				"title": "Deploy file to local environment",
				"category": "Miranum"
			},
			{
				"command": "miranum.deploy.dev",
				"title": "Deploy file to dev environment",
				"category": "Miranum"
			},
			{
				"command": "miranum.deploy.test",
				"title": "Deploy file to test environment",
				"category": "Miranum"
			},
			{
				"command": "miranum.deployAll.local",
				"title": "Deploy directory to local environment",
				"category": "Miranum"
			},
			{
				"command": "miranum.deployAll.dev",
				"title": "Deploy directory to dev environment",
				"category": "Miranum"
			},
			{
				"command": "miranum.deployAll.test",
				"title": "Deploy directory to test environment",
				"category": "Miranum"
			},
			{
				"command": "miranum.generateFile",
				"title": "Generate new file",
				"category": "Miranum"
			},
			{
				"command": "miranum.generateProject",
				"title": "Generate new project",
				"category": "Miranum"
			}
		],
		"viewsContainers": {
			"activitybar": [
			  {
          "id": "miranum-ide",
          "title": "Miranum-IDE",
          "icon": "assets/komet.svg"
			  }
			]
    },
    "views": {
			"miranum-ide": [
			  {
          "id": "bpmn-project",
          "name": "Files"
			  },
			  {
          "id": "commands",
          "name": "Commands"
			  }
			]
    },
    "viewsWelcome": [
			{
				"view": "commands",
				"contents": "[Generate a new file](command:miranum.generateFile) \n [Generate a new project](command:miranum.generateProject)"
			}
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "deploy.submenu",
          "group": "1_modification",
          "when": "resourceExtname == .bpmn || resourceExtname == .form || resourceExtname == .dmn || resourceExtname == .config"
        },
        {
          "submenu": "deployAll.submenu",
          "group": "1_modification",
          "when": "explorerResourceIsFolder"
        },
        {
          "submenu": "generate.submenu",
          "group": "1_modification",
          "when": "explorerResourceIsFolder"
        }
      ],
      "deploy.submenu":[
        {
            "command": "miranum.deploy.local"
        },
        {
            "command": "miranum.deploy.dev"
        },
        {
            "command": "miranum.deploy.test"
        }
      ],
      "deployAll.submenu":[
        {
            "command": "miranum.deployAll.local"
        },
        {
            "command": "miranum.deployAll.dev"
        },
        {
            "command": "miranum.deployAll.test"
        }
      ],
      "generate.submenu":[
        {
            "command": "miranum.generateFile"
        },
        {
            "command": "miranum.generateProject"
        }
      ]
    },
    "submenus": [
      {
        "id": "deploy.submenu",
        "label": "Deploy"
      },
      {
        "id": "deployAll.submenu",
        "label": "Deploy All"
      },
      {
        "id": "generate.submenu",
        "label": "Generate"
      }
    ]
	}
}
