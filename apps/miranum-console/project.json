{
  "name": "miranum-console",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/miranum-console/src",
  "projectType": "application",
  "implicitDependencies": ["miranum-console-webview"],
  "targets": {
    "observe-all": {
      "executor": "nx:run-commands",
      "parallel": true,
      "options": {
        "commands": [
          {
            "command": "npx nx observe miranum-console",
            "prefix": "miranum-console",
            "color": "blue"
          },
          {
            "command": "npx nx observe miranum-console-webview",
            "prefix": "miranum-console-webview",
            "color": "green"
          }
        ]
      }
    },
    "observe": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "development",
      "options": {
        "watch": true,
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/miranum-console",
        "deleteOutputPath": false,
        "main": "apps/miranum-console/src/main.ts",
        "tsConfig": "apps/miranum-console/tsconfig.app.json",
        "generatePackageJson": true,
        "webpackConfig": "apps/miranum-console/webpack.config.js",
        "babelUpwardRootMode": true,
        "assets": [
          {
            "glob": "komet.svg",
            "input": "./images",
            "output": "/assets"
          },
          {
            "glob": "*.png",
            "input": "./apps/miranum-console/icons",
            "output": "/assets/icons"
          }
        ]
      },
      "configurations": {
        "development": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true
        }
      }
    },
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/miranum-console",
        "deleteOutputPath": false,
        "main": "apps/miranum-console/src/main.ts",
        "tsConfig": "apps/miranum-console/tsconfig.app.json",
        "generatePackageJson": true,
        "webpackConfig": "apps/miranum-console/webpack.config.js",
        "babelUpwardRootMode": true,
        "assets": [
          {
            "glob": "komet.svg",
            "input": "./images",
            "output": "/assets"
          },
          {
            "glob": "miranum_logo.png",
            "input": "./images",
            "output": "/assets"
          },
          {
            "glob": "*.png",
            "input": "./apps/miranum-console/icons",
            "output": "/"
          },
          {
            "glob": "LICENSE",
            "input": "./",
            "output": "/"
          },
          {
            "glob": ".vscodeignore",
            "input": "./apps/miranum-console/",
            "output": "/"
          },
          {
            "glob": "README.md",
            "input": "./apps/miranum-console/",
            "output": "/"
          },
          {
            "glob": "CHANGELOG.md",
            "input": "./apps/miranum-console/",
            "output": "/"
          }
        ]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "sourceMap": false,
          "fileReplacements": [
            {
              "replace": "apps/miranum-console/src/environments/environment.ts",
              "with": "apps/miranum-console/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nx/node:node",
      "options": {
        "buildTarget": "miranum-console:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "miranum-console:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/miranum-console/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["coverage/apps/miranum-console"],
      "options": {
        "jestConfig": "apps/miranum-console/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
