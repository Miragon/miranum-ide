{
  "name": "miranum-vs-code-forms",
  "displayName": "Miranum: Form Builder",
  "description": "Edit JSON Schema files with an modern easy to use editor.",
  "license": "Apache License 2.0",
  "version": "0.1.0",
  "publisher": "miragon-gmbh",
  "homepage": "https://www.miranum.io/",
  "galleryBanner": {
    "color": "#F0F8FF",
    "theme": "light"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FlowSquad/miranum-ide.git"
  },
  "bugs": {
    "url": "https://github.com/FlowSquad/miranum-ide/issues"
  },
  "engines": {
    "vscode": "^1.73.0"
  },
  "icon": "assets/miranum_logo.png",
  "categories": [
    "Other", "Visualization"
  ],
  "extensionPack": [
    "miragon-gmbh.miranum-console",
    "miragon-gmbh.miranum-json-forms",
    "miragon-gmbh.miranum-vs-code-forms",
    "miragon-gmbh.vs-code-bpmn-modeler"
  ],
  "keywords": [
    "JSON", "JSON Schema", "Forms", "Formbuilder", "Renderer", "rendering"
  ],
  "main": "main.js",
  "activationEvents": [
    "onCustomEditor:jsonschema-builder",
    "onCommand:jsonschema-renderer.togglePreview",
    "onCommand:jsonschema-builder.toggleTextEditor"
  ],
  "contributes": {
    "customEditors": [
      {
        "viewType": "jsonschema-builder",
        "id": "jsonschema-builder",
        "displayName": "JSON Schema Builder",
        "selector": [
          {
            "filenamePattern": "*.form"
          }
        ],
        "priority": "default"
      }
    ],
    "configuration": {
      "title": "Miranum",
      "properties": {
        "jsonSchemaBuilder.toggleTextEditor": {
          "type": "string",
          "default": "Tab",
          "description": "Choose where to open the standard text editor.",
          "enum": [
            "Group",
            "Tab"
          ],
          "enumDescription": [
            "Use Group to open the editor to the side of the currently active one.",
            "Use Tab to open the editor in a new tab."
          ]
        }
      }
    },
    "commands": [
      {
        "command": "jsonschema-renderer.togglePreview",
        "title": "Miranum: Toggle Preview",
        "icon": "$(notebook-render-output)"
      },
      {
        "command": "jsonschema-builder.toggleTextEditor",
        "title": "Miranum: Toggle Standard Text Editor",
        "icon": "$(notebook-mimetype)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "jsonschema-renderer.togglePreview",
          "when": "jsonschema-builder.openCustomEditors > 0"
        },
        {
          "command": "jsonschema-builder.toggleTextEditor",
          "when": "jsonschema-builder.openCustomEditors > 0"
        }
      ],
      "editor/title": [
        {
          "command": "jsonschema-renderer.togglePreview",
          "group": "navigation",
          "when": "activeWebviewPanelId == 'jsonschema-builder'"
        },
        {
          "command": "jsonschema-builder.toggleTextEditor",
          "group": "navigation",
          "when": "activeWebviewPanelId == 'jsonschema-builder'"
        }
      ]
    },
    "keybindings": [
      {
        "command": "jsonschema-renderer.togglePreview",
        "key": "ctrl+shift+p",
        "when": "jsonschema-builder.openCustomEditors > 0"
      },
      {
        "command": "jsonschema-builder.toggleTextEditor",
        "key": "ctrl+shift+e",
        "when": "jsonschema-builder.openCustomEditors > 0"
      }
    ]
  }
}
