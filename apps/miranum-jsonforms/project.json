{
  "name": "miranum-jsonforms",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/miranum-jsonforms/src",
  "projectType": "application",
  "implicitDependencies": ["miranum-jsonforms-webview"],
  "targets": {
    "observe-all": {
      "executor": "nx:run-commands",
      "parallel": true,
      "options": {
        "commands": [
          {
            "command": "npx nx observe miranum-jsonforms",
            "prefix": "miranum-jsonforms",
            "color": "blue"
          },
          {
            "command": "npx nx observe miranum-jsonforms-webview",
            "prefix": "miranum-jsonforms-webview",
            "color": "green"
          }
        ]
      }
    },
    "observe": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "development",
      "options": {
        "watch": true,
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/miranum-jsonforms",
        "deleteOutputPath": false,
        "main": "apps/miranum-jsonforms/src/main.ts",
        "tsConfig": "apps/miranum-jsonforms/tsconfig.app.json",
        "generatePackageJson": true,
        "webpackConfig": "apps/miranum-jsonforms/webpack.config.js",
        "babelUpwardRootMode": true,
        "assets": [
          {
            "glob": "images/komet.svg",
            "input": "./",
            "output": "/assets"
          },
          {
            "input": "./images/",
            "glob": "miranum_logo.png",
            "output": "/assets"
          }
        ]
      },
      "configurations": {
        "development": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true
        }
      }
    },
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/miranum-jsonforms",
        "deleteOutputPath": false,
        "main": "apps/miranum-jsonforms/src/main.ts",
        "tsConfig": "apps/miranum-jsonforms/tsconfig.app.json",
        "generatePackageJson": true,
        "webpackConfig": "apps/miranum-jsonforms/webpack.config.js",
        "babelUpwardRootMode": true,
        "assets": [
          {
            "input": "./images/",
            "glob": "komet.svg",
            "output": "/assets"
          },
          {
            "input": "./images/",
            "glob": "miranum_logo.png",
            "output": "/assets"
          },
          {
            "input": "./",
            "glob": "LICENSE",
            "output": "/"
          },
          {
            "input": "./apps/miranum-jsonforms/",
            "glob": ".vscodeignore",
            "output": "/"
          },
          {
            "glob": "README.md",
            "input": "./apps/miranum-jsonforms/",
            "output": "/"
          },
          {
            "glob": "CHANGELOG.md",
            "input": "./apps/miranum-jsonforms/",
            "output": "/"
          }
        ]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "sourcemap": false,
          "fileReplacements": [
            {
              "replace": "apps/miranum-jsonforms/src/environments/environment.ts",
              "with": "apps/miranum-jsonforms/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/miranum-jsonforms/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/miranum-jsonforms/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
