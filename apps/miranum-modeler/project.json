{
  "name": "miranum-modeler",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/miranum-modeler/src",
  "projectType": "application",
  "implicitDependencies": [
    "miranum-modeler-webview"
  ],
  "targets": {
    "build": {
      "executor": "@nrwl/node:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/miranum-modeler",
        "deleteOutputPath": false,
        "main": "apps/miranum-modeler/src/main.ts",
        "tsConfig": "apps/miranum-modeler/tsconfig.app.json",
        "generatePackageJson": true,
        "webpackConfig": "apps/miranum-modeler/custom-webpack.config.js",
        "assets": [
          { "glob": "images/komet.svg", "input": "./", "output": "/assets" },
          { "glob": "images/kometLogo.png", "input": "./", "output": "/assets" },
          { "glob": ".vscodeignore", "input": "./apps/miranum-modeler/", "output": "/" },
          { "glob": "LICENSE", "input": "./", "output": "/" }
        ]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "sourceMap": false,
          "fileReplacements": [
            {
              "replace": "apps/miranum-forms/src/environments/environment.ts",
              "with": "apps/miranum-forms/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "miranum-modeler:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "miranum-modeler:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/miranum-modeler/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/miranum-modeler/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
